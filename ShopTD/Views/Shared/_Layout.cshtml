<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .menu li a{
            color: white;
            position: relative;            
        }
        .menu li:hover > .menu{
            display: block;
            background: rgb(179, 180, 238);
        }
        .menu li a:hover {
            background: rgb(49, 62, 203);
        }
        .menu .menu li {
        }
        li .menu {    
            width: 200px;
            display: none;
            position: absolute;
        }
        li .menu > li ul{
            margin-top: -40px;
            margin-left: 200px;
        }
    </style>
</head>
<body>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
